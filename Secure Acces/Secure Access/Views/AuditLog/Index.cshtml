@model List<Logic.Classes.AuditLog>

@{
    ViewData["Title"] = "Audit Logbook";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-striped table-bordered mt-3">
    <thead class="table-dark">
        <tr>
            <th>Log ID</th>
            <th>Date / Time</th>
            <th>User ID</th>
            <th>Door Name</th>
            <th>Door Group ID</th>
        </tr>
    </thead>
    <tbody>
        @if (Model == null || !Model.Any())
        {
            <tr>
                <td colspan="5" class="text-center">No logs available.</td>
            </tr>
        }
        else
        {
            foreach (var log in Model)
            {
                <tr>
                    <td>@log.getId()</td>
                    <td>@log.getDate().ToString("yyyy-MM-dd HH:mm:ss")</td>
                    <td>@log.getUserId()</td>
                    <td>@log.getDoor().getName()</td>
                    <td>@log.getDoor().getGroupId()</td>
                </tr>
            }
        }
    </tbody>
</table>

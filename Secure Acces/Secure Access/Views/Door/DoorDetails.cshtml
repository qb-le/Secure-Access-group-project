@model Logic.Classes.Door

<h2>Door Details</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <td>@Model.getId()</td>
    </tr>
    <tr>
        <th>Name</th>
        <td>@Model.getName()</td>
    </tr>
    <tr>
        <th>Group ID</th>
        <td>@Model.getGroupId()</td>
    </tr>
</table>

<a asp-area="" asp-controller="QR" asp-action="QRLogin" class="btn btn-primary">Get QR code</a>


<a class="btn btn-secondary" asp-action="GroupDetails" asp-route-id="@Model.getGroupId()">Back to Group</a>

@model List<Logic.Classes.DoorGroup>

<h2>Door Groups</h2>

@if (!Model.Any())
{
    <p>No door groups found.</p>
}
else
{
    <ul class="list-group">
        @foreach (var group in Model)
        {
            <li class="list-group-item">
                <a asp-action="GroupDetails" asp-route-id="@group.getId()">@group.getName()</a>
            </li>
        }
    </ul>
}
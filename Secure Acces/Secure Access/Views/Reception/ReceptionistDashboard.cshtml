@{
    ViewData["Title"] = "Receptionist Dashboard";
    ViewData["ShowLogsButton"] = true;
}

@model IEnumerable<Logic.Classes.Request>
@Html.AntiForgeryToken()

<h2>Receptionist Dashboard</h2>

<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>
<script>
    // ----------------- SignalR Setup -----------------
    const connection = new signalR.HubConnectionBuilder()
        .withUrl("/accessHub")
        .build();

    // When a notification arrives, refresh the page
    connection.on("ReceiveNotification", function (request) {
        console.log("Notification received:", request);
        location.reload(); // refreshes the entire page
    });

    connection.start()
        .then(() => console.log("Connected to AccessHub"))
        .catch(err => console.error("SignalR connection error:", err));
</script>

<table class="table">
    <thead>
        <tr>
            <th>Door</th>
            <th>Requester</th>
            <th>Status</th>
            <th>Time</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.DoorId</td>
                <td>@r.Name</td>
                <td>@(r.Status == 0 || r.Status == 1 ? "Handled" : "Pending")</td>
                <td>@r.RequestTime.ToString("dd-MM-yyyy HH:mm")</td>
                <td>
                    @if (r.Status == 2)
                    {
                        <form asp-controller="Reception" asp-action="GrantAccess" asp-route-id="@r.Id" method="post">
                            <button type="submit" class="btn btn-success">Grant</button>
                        </form>

                        <form asp-controller="Reception" asp-action="RejectAccess" asp-route-id="@r.Id" method="post">
                            <button type="submit" class="btn btn-danger">Reject</button>
                        </form>

                    }

                    else
                    {
                        <span>@(r.Status == 0 ? "Rejected" : r.Status == 1 ? "Granted" : "Pending")</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@model IEnumerable<Logic.Classes.Request>

<h2>Receptionist Dashboard</h2>

<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>
<script>
    // ----------------- SignalR Setup -----------------
    const connection = new signalR.HubConnectionBuilder()
        .withUrl("/accessHub")
        .build();

    connection.on("ReceiveNotification", function (request) {
        addRequestRow(request);
    });

    connection.start()
        .then(() => console.log("Connected to AccessHub"))
        .catch(err => console.error("SignalR connection error:", err));

    // ----------------- Add Row Function -----------------
    function addRequestRow(request) {
        const table = document.querySelector("table tbody");
        const row = table.insertRow();

        row.insertCell(0).innerText = request.doorId;
        row.insertCell(1).innerText = request.name;
        row.insertCell(2).innerText = request.status;
        row.insertCell(3).innerText = new Date(request.requestTime).toLocaleTimeString();

        const actionsCell = row.insertCell(4);

        if (request.status === 2) {
            actionsCell.innerHTML = `
                <button class="btn btn-success" onclick="grantAccess(${request.id})">Grant</button>
                <button class="btn btn-danger" onclick="rejectAccess(${request.id})">Reject</button>
            `;
        } else {
            actionsCell.innerText = request.status;
        }
    }

    // ----------------- Grant/Reject Functions -----------------
    async function grantAccess(id) {
        await fetch(`/Reception/GrantAccess?id=${id}`, { method: 'POST' });
        console.log(`Grant request sent for ID: ${id}`);
    }

    async function rejectAccess(id) {
        await fetch(`/Reception/RejectAccess?id=${id}`, { method: 'POST' });
        console.log(`Reject request sent for ID: ${id}`);
    }
</script>

<table class="table">
    <thead>
        <tr>
            <th>Door</th>
            <th>Requester</th>
            <th>Status</th>
            <th>Time</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.DoorId</td>
                <td>@r.Name</td>
                <td>@r.Status</td>
                <td>@r.RequestTime.ToShortTimeString()</td>
                <td>
                    @if (r.Status == 2)
                    {
                        <button class="btn btn-success" onclick="grantAccess(@r.Id)">Grant</button>
                        <button class="btn btn-danger" onclick="rejectAccess(@r.Id)">Reject</button>
                    }
                    else
                    {
                        <span>@r.Status</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

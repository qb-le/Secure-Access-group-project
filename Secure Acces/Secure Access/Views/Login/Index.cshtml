@{
    ViewData["Title"] = "Login Page";
    ViewData["HideNavbar"] = true;
}

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="text-center" style="max-width: 400px; width: 100%;">
        <h2 class="mb-4 fw-bold">Choose Role</h2>

        <div class="d-grid gap-3">
            <form asp-controller="Login" asp-action="Set" method="post">
                <input type="hidden" name="role" value="Receptionist" />
                <button type="submit" class="btn btn-primary w-100 role-button">Receptionist</button>
            </form>

            <form asp-controller="Login" asp-action="Set" method="post">
                <input type="hidden" name="role" value="User" />
                <button type="submit" class="btn btn-primary w-100 role-button">User</button>
            </form>
        </div>
    </div>
</div>


